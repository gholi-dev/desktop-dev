{
  "name": "liara",
  "version": "0.0.1",
  "description": "The desktop interface for Liara",
  "main": "main/index.js",
  "license": "MIT",
  "repository": "liara-ir/desktop",
  "scripts": {
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "dist": "npm run build && build --mac --linux --win"
  },
  "build": {
    "appId": "liara.desktop",
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "main/static/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "main/static/install-spinner.gif"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "main/static/icons/mac.icns"
    }
  },
  "devDependencies": {
    "bundle": "^2.1.0",
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "next": "^6.1.1",
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "dependencies": {
    "@material-ui/core": "^3.0.1",
    "@material-ui/icons": "^3.0.1",
    "app-root-path": "^2.0.1",
    "axios": "^0.18.0",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.3",
    "fs-extra": "^7.0.0",
    "got": "^9.2.0",
    "jss": "^9.8.7",
    "jss-rtl": "^0.2.3",
    "prop-types": "^15.6.2",
    "styled-components": "^3.4.5"
  }
}
